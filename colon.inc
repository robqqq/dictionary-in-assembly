%define first 0

; %1 - ключ (в кавычках)
; %2 - имя метки, по которой будет находиться значение

%macro colon 2
    %%next: dq first        ; ссылка на следующий элемент списка
    %define first %%next
    db %1, 0                ; сохраняем ключ
    %2:                     ; создаем метку для значения
%endmacro